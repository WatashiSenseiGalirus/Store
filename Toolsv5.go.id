    /* Scroll indicator */
    .scroll-indicator {
      position: fixed;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 1.3rem;
      color: #04f8f7;
      text-shadow:
        0 0 7px #04f8f7,
        0 0 20px #03c7eb;
      animation: pulse 2s infinite ease-in-out;
      pointer-events: none;
      user-select: none;
    }
    @keyframes pulse {
      0%, 100% {
        opacity: 0.6;
        transform: translateX(-50%) translateY(0);
      }
      50% {
        opacity: 1;
        transform: translateX(-50%) translateY(12px);
      }
    }

    /* Responsive */
    @media (max-width: 860px) {
      .container {
        padding: 40px 30px 50px;
