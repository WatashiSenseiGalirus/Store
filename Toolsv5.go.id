<script>
  const audioFiles = [
    "https://od.lk/s/NzNfMTA0ODk3NDExXw/GALIRUS_OFFICIAL_1757433784.mp3",
    "https://od.lk/s/NzNfMTAyMzIxNDI4Xw/GALIRUS_PLAYLIST_1753346242803845116.mp3",
    "https://od.lk/s/NzNfMTA0ODk3NzU0Xw/GALIRUS_OFFICIAL_1757434690.mp3"
  ];

  function playRandomAudio() {
    const randomIndex = Math.floor(Math.random() * audioFiles.length);
    const audioElement = document.getElementById("audioPlayer");
    const audioSource = document.getElementById("audioSource");

    audioSource.src = audioFiles[randomIndex];
    audioElement.load();

    // autoplay tapi mute (aman di semua browser)
    audioElement.play().catch(err => {
      console.log("Autoplay diblokir:", err);
    });

    // unmute setelah user interaksi
    const unmute = () => {
      audioElement.muted = false;
      audioElement.play();
      document.body.removeEventListener("click", unmute);
    };
    document.body.addEventListener("click", unmute);
  }

  window.onload = playRandomAudio;
</script>

