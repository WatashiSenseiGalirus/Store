      border-radius: 25px;
      padding: 40px 60px 50px;
      color: #dbe9f4;
      border: 2px solid rgba(67, 184, 248, 0.25);
      position: relative;
    }

    /* Header */
    header {
      text-align: center;
      margin-bottom: 50px;
      z-index: 10;
    }
    header h1 {
      font-size: 4rem;
      font-weight: 900;
      color: #e9f8ff;
      letter-spacing: 0.13em;
      text-transform: uppercase;
      border-bottom: 6px solid #30e3ca;
      padding-bottom: 10px;
      display: inline-block;
      margin-bottom: 15px;
      user-select: none;
      cursor: default;
      text-shadow: 0 0 6px rgba(48, 227, 202, 0.6);
    }
    header p {
      font-size: 1.2rem;
      color: #9ac9d9;
      margin-bottom: 50px;
      letter-spacing: 0.04em;
    }

    /* Section title */
    h2.section-title {
      font-size: 1.75rem;
      font-weight: 800;
      text-transform: uppercase;
      color: #e0f5ff;
      border-bottom: 3px solid #30e3ca;
      padding-bottom: 5px;
      margin-bottom: 30px;
      letter-spacing: 0.06em;
      user-select: none;
    }

    /* Features list */
    ul.features {
      list-style: none;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 24px;
      margin-bottom: 45px;
    }
    ul.features li {
      background: rgba(18, 39, 48, 0.75);
      border-radius: 20px;
      padding: 18px 20px;
      font-weight: 700;
      font-size: 1.1rem;
      color: #b2ecf1;
      border: 2px solid transparent;
      box-shadow: 0 0 10px #20808055;
      display: flex;
      align-items: center;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
      user-select: none;
    }
    ul.features li::before {
      content: "✔";
      color: #00fff7;
      font-size: 1.4rem;
      margin-right: 14px;
      text-shadow: 0 0 3px #00fff7;
      flex-shrink: 0;
    }
    ul.features li:hover,
